@{
    Layout = "_LayoutAdminPanel";
}
@using WhatHaveYouPlayed.Models.Dto
@model PanelDto
<div class="col-lg-12">
    <form asp-action="AddGame" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-2">
            @Html.TextAreaFor(m=>m.GameData.Name, new{placeholder="Game Name", @class="form-control", maxlength="50", style="height: 50px"})
            @Html.ValidationMessageFor(m => m.GameData.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-2">
            @Html.TextAreaFor(m=>m.GameData.Producent.CompanyName, new{placeholder="Producent", @class="form-control", style="height: 50px", maxlength="50"})
            @Html.ValidationMessageFor(m => m.GameData.Producent.CompanyName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-2">
            <input type="text" class="form-control" asp-for="GameData.ReleaseDate" placeholder="Release Date" onfocus="(this.type='date')">
            @Html.ValidationMessageFor(m => m.GameData.ReleaseDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-2">
            <input type="number" asp-for="GameData.PegiAge" max="18" min="3" class="form-control" placeholder="Pegi Age">
            @Html.ValidationMessageFor(m => m.GameData.PegiAge, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-2">
            @*Here input for Image*@
            <input type="file" name="gameImage" asp-for="GameImage" class="form-control" accept="@ViewBag.ImageAcceptString" required>
            
        </div>
        <input type="submit" value="Add Game" class="btn btn-success fw-bold btn-lg" />
