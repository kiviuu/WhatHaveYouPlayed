@using WhatHaveYouPlayed.Models.Dto
@model PanelDto
@{
    string state;
    if (Model.StatusMessage.Count != 0)
    {
        if (Model.StatusMessage[0].Contains("Fail"))
            state = "danger";
        else if (Model.StatusMessage[0].Contains("Remember"))
            state = "warning";
        else
            state = "success";

        foreach(var message in Model.StatusMessage)
        {
            <div class="alert alert-@state text-center" role="alert">
                @message
                <button type="button" class="btn-close ms-5" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>      
        }
        
    }
}