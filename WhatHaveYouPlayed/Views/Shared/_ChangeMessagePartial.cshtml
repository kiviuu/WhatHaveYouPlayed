@using WhatHaveYouPlayed.Models.Dto
@model AccountDto
@{
    string state;
    if(!(Model.StatusMessage is null)){
        if (Model.StatusMessage.Contains("Failed"))
            state = "danger";
        else if (Model.StatusMessage.Contains("Remember"))
            state = "warning";
        else
            state = "success";
        <div class="alert alert-@state" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close ms-5" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}